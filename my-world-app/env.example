# My World App - Environment Configuration
# Copy this file to .env and update the values

# ===== DATABASE CONFIGURATION =====
# MongoDB connection string
# For local development: mongodb://localhost:27017/my-world-app
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/my-world-app
MONGODB_URI=mongodb://localhost:27017/my-world-app

# ===== SESSION CONFIGURATION =====
# Secret key for session encryption (generate a random string)
SESSION_SECRET=your-super-secret-session-key-here-change-this

# ===== SERVER CONFIGURATION =====
# Port for the server to run on
PORT=3000

# Environment (development, production)
NODE_ENV=development

# ===== AI CONFIGURATION =====
# OpenAI API Key (required for AI features)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# AI Model Configuration
# Available models: gpt-4, gpt-3.5-turbo, gpt-4-turbo
OPENAI_MODEL=gpt-4

# AI Request Limits
# Maximum tokens per request
OPENAI_MAX_TOKENS=2000

# AI Temperature (creativity level: 0.0 = focused, 1.0 = creative)
OPENAI_TEMPERATURE=0.8

# ===== RATE LIMITING =====
# Rate limit for AI requests (requests per minute)
AI_RATE_LIMIT=10

# ===== FILE UPLOADS =====
# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=5242880

# Allowed file types for uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# ===== SECURITY =====
# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===== LOGGING =====
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ===== FEATURES =====
# Enable AI features (true/false)
ENABLE_AI_FEATURES=true

# Enable image generation (true/false)
ENABLE_IMAGE_GENERATION=false

# Enable user authentication (true/false)
ENABLE_AUTH=false

# ===== OPTIONAL: EXTERNAL SERVICES =====
# Image hosting service (optional)
# IMAGE_HOSTING_URL=https://your-image-hosting-service.com

# Email service (optional, for future features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-email-password

# ===== DEVELOPMENT =====
# Enable debug mode
DEBUG=false

# Auto-reload on file changes (development only)
AUTO_RELOAD=true 